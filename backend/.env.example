# Server Configuration
NODE_ENV=development
PORT=4000
BASE_URL=http://localhost:4000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/digital_fabrication_network

# Redis (Caching & Pub/Sub)
# Format: redis://HOST:PORT
REDIS_URL=redis://localhost:6379

# Authentication (JWT)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth (for Social Login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# Email/SMTP Configuration (Nodemailer)
# Example for Zoho: smtp.zoho.com
# Example for Gmail: smtp.gmail.com
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password-or-app-password

# File Storage Configuration
# Set USE_S3=true to use AWS S3, otherwise local storage is used
USE_S3=false
LOCAL_UPLOAD_DIR=uploads

# AWS S3 Configuration (Required if USE_S3=true)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=dfn-uploads
